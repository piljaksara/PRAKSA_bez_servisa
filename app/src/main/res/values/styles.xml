<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Snackbar Style -->
    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/snackbar_background</item>
    </style>

    <!-- Custom TextAppearance for Snackbar -->
    <style name="CustomSnackbarTextAppearance">
        <item name="android:textSize">18sp</item> <!-- Povećajte veličinu teksta po potrebi -->
        <item name="android:textColor">@color/snackbar_text</item>
    </style>
</resources>
