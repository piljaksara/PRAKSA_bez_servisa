<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kada je dugme fokusirano -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#BBDEFB" /> <!-- Svetlo plava boja za fokus -->
            <corners android:radius="4dp" /> <!-- Manji radijus uglova -->
            <stroke android:width="2dp" android:color="#0D47A1" /> <!-- Tamna plava boja i širi okvir -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>

    <!-- Kada je dugme pritisnuto -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#90CAF9" /> <!-- Malo tamnija svetlo plava boja za pritisnuto stanje -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#0D47A1" /> <!-- Tanji okvir i tamnija plava -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>

    <!-- Kada je dugme u normalnom stanju -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Svetla plava boja za normalno stanje -->
            <corners android:radius="4dp" /> <!-- Manji radijus uglova -->
            <stroke android:width="0.5dp" android:color="#0D47A1" /> <!-- Još manji okvir i tamnija plava -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>
</selector>
