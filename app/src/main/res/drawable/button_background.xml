<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kada je dugme fokusirano -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2" /> <!-- Svetlo crvena boja za fokus -->
            <corners android:radius="4dp" /> <!-- Manji radijus uglova -->
            <stroke android:width="2dp" android:color="#B39DDB" /> <!-- Tamnija ljubičasta boja i širi okvir -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>

    <!-- Kada je dugme pritisnuto -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#EF9A9A" /> <!-- Malo tamnija svetlo crvena boja za pritisnuto stanje -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#B39DDB" /> <!-- Tanji okvir i tamnija ljubičasta -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>

    <!-- Kada je dugme u normalnom stanju -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E1BEE7" /> <!-- Svetla ljubičasta boja za normalno stanje -->
            <corners android:radius="4dp" /> <!-- Manji radijus uglova -->
            <stroke android:width="0.5dp" android:color="#B39DDB" /> <!-- Još manji okvir i tamnija ljubičasta -->
            <padding android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="8dp" /> <!-- Veći padding gornje i donje strane -->
        </shape>
    </item>
</selector>
