<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kada je dugme fokusirano -->
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#BBDEFB" /> <!-- Svetla plava boja -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Kada je dugme pritisnuto -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#90CAF9" /> <!-- Malo tamnija svetla plava boja -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Kada je dugme u normalnom stanju -->
    <item>
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E1F5FE" /> <!-- Svetla plava boja -->
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
