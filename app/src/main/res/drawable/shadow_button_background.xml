<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kada je dugme fokusirano -->
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFCDD2" /> <!-- Svetlo crvena boja -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Kada je dugme pritisnuto -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#EF9A9A" /> <!-- Malo tamnija svetlo crvena boja -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Kada je dugme u normalnom stanju -->
    <item>
        <layer-list>
            <!-- Pozadina dugmeta -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E1BEE7" /> <!-- Svetla ljubičasta boja -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
